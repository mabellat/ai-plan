{
  "name": "ai-agentic-roadmap",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "pip install -U pip && pip install -r env/requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "ms-python.vscode-pylance",
        "github.vscode-pull-request-github",
        "redhat.vscode-yaml"
      ]
    }
  }
}
